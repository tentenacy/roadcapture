<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="500">
    </Transition>

    <ConstraintSet android:id="@+id/start">

        <Constraint
            android:id="@+id/button_username_input_signup_submit"
            style="@style/Button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="248dp"
            android:text="@string/username_input_signup_submit"
            android:visibility="invisible"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="@+id/guideline_username_input_signup_body_end"
            motion:layout_constraintStart_toStartOf="@+id/guideline_username_input_signup_body_start"
            motion:layout_constraintTop_toBottomOf="@+id/edittext_username_input_signup"
            motion:layout_constraintVertical_bias="1.0" />

        <Constraint
            android:id="@+id/textview_username_input_signup_terms_of_service_shell"
            style="@style/Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/username_input_signup_terms_shell"
            android:visibility="invisible"
            motion:layout_constraintBottom_toBottomOf="@+id/textview_username_input_signup_terms_of_service"
            motion:layout_constraintEnd_toStartOf="@+id/guideline_username_input_signup_body_end"
            motion:layout_constraintStart_toEndOf="@+id/textview_username_input_signup_terms_of_service"
            motion:layout_constraintTop_toTopOf="@+id/textview_username_input_signup_terms_of_service"/>

        <Constraint
            android:id="@+id/textview_username_input_signup_terms_of_service"
            style="@style/Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/username_input_signup_terms"
            android:textColor="@color/secondaryColor"
            android:visibility="invisible"
            motion:layout_constraintBottom_toTopOf="@+id/button_username_input_signup_submit"
            motion:layout_constraintEnd_toStartOf="@+id/textview_username_input_signup_terms_of_service_shell"
            motion:layout_constraintHorizontal_chainStyle="packed"
            motion:layout_constraintStart_toStartOf="@+id/guideline_username_input_signup_body_start" />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

        <Constraint
            android:id="@+id/button_username_input_signup_submit"
            style="@style/Button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="200dp"
            android:text="@string/username_input_signup_submit"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="@+id/guideline_username_input_signup_body_end"
            motion:layout_constraintStart_toStartOf="@+id/guideline_username_input_signup_body_start"
            motion:layout_constraintTop_toBottomOf="@+id/edittext_username_input_signup"
            motion:layout_constraintVertical_bias="1.0" />

        <Constraint
            android:id="@+id/textview_username_input_signup_terms_of_service_shell"
            style="@style/Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/username_input_signup_terms_shell"
            motion:layout_constraintBottom_toBottomOf="@+id/textview_username_input_signup_terms_of_service"
            motion:layout_constraintEnd_toStartOf="@+id/guideline_username_input_signup_body_end"
            motion:layout_constraintStart_toEndOf="@+id/textview_username_input_signup_terms_of_service"
            motion:layout_constraintTop_toTopOf="@+id/textview_username_input_signup_terms_of_service"/>

        <Constraint
            android:id="@+id/textview_username_input_signup_terms_of_service"
            style="@style/Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/username_input_signup_terms"
            android:textColor="@color/secondaryColor"
            motion:layout_constraintBottom_toTopOf="@+id/button_username_input_signup_submit"
            motion:layout_constraintEnd_toStartOf="@+id/textview_username_input_signup_terms_of_service_shell"
            motion:layout_constraintHorizontal_chainStyle="packed"
            motion:layout_constraintStart_toStartOf="@+id/guideline_username_input_signup_body_start" />

    </ConstraintSet>
</MotionScene>