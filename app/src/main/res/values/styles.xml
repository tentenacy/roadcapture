        <item name="android:fontFamily">@font/notosanskr_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:src">@drawable/ic_back</item>
    </style>

    <style name="BottomSheetButton" parent="android:TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="backgroundTint">@color/secondaryColor</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:fontFamily">@font/notosanskr_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:background">@drawable/bottom_sheet_button</item>
    </style>

    <style name="BottomSheetButtonWhite" parent="android:TextAppearance">
        <item name="android:textSize">16sp</item>
