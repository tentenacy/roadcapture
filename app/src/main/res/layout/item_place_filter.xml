<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="place"
            type="com.untilled.roadcapture.data.dto.place.Place" />

        <variable
            name="onClickItem"
            type="android.view.View.OnClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_iplace_filter_container"
        android:layout_width="wrap_content"
        android:layout_height="144dp"
        android:paddingEnd="16dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_iplace_filter_bg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="3:4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:src="@drawable/img_sample_thumbnail" />
<!--            bind:studioPlaceImage="@{place.}"-->


        <View
            android:id="@+id/view_iplace_filter_overlay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="@{onClickItem}"
            android:background="@drawable/selector_filter_place"
            app:layout_constraintBottom_toBottomOf="@+id/image_iplace_filter_bg"
            app:layout_constraintEnd_toEndOf="@+id/image_iplace_filter_bg"
            app:layout_constraintStart_toStartOf="@+id/image_iplace_filter_bg"
            app:layout_constraintTop_toTopOf="@+id/image_iplace_filter_bg" />

        <TextView
            android:id="@+id/text_iplace_filter_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/BodyWhite"
            android:text="@{place.name}"
            tools:text="경기도"
            android:layout_margin="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>