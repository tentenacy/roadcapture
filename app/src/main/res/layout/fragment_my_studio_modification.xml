<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="user"
            type="com.untilled.roadcapture.data.entity.User" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/my_studio_modification_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbarlayout_my_studio_modification"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:fitsSystemWindows="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/ctoolbarlayout_my_studio_modification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|enterAlways">

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/toolbar_my_studio_modification"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    app:layout_collapseMode="parallax" />

                <ImageView
                    android:id="@+id/imageview_my_studio_modification_back"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="start|center"
                    android:padding="16dp"
                    android:src="@drawable/ic_back" />

                <TextView
                    android:id="@+id/textview_my_studio_modification_title"
                    style="@style/ActionBarTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginStart="64dp"
                    android:gravity="start|center"
                    android:text="@string/my_studio_modification_title" />

                <ImageView
                    android:id="@+id/imageview_my_studio_modification_check"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="right"
                    android:padding="12dp"
                    android:src="@drawable/check"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <ImageView
            android:id="@+id/imageview_my_studio_modification_background"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="48dp"
            android:scaleType="fitXY"
            app:layout_constraintDimensionRatio="4:3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            bind:studioBackgroundImage="@{user.backgroundUrl}"
            tools:src="@drawable/sample_profile_background" />

        <View
            android:id="@+id/view_my_studio_modification_background_overlay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/overlay_gradient_background"
            app:layout_constraintBottom_toBottomOf="@+id/imageview_my_studio_modification_background"
            app:layout_constraintEnd_toEndOf="@+id/imageview_my_studio_modification_background"
            app:layout_constraintStart_toStartOf="@+id/imageview_my_studio_modification_background"
            app:layout_constraintTop_toTopOf="@+id/imageview_my_studio_modification_background" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageview_my_studio_modification_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageview_my_studio_modification_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageview_my_studio_modification_background"
            app:layout_constraintVertical_bias="0.7"
            bind:studioProfileImage="@{user.profileUrl}"
            tools:src="@drawable/sample_profile" />

        <TextView
            android:id="@+id/textview_my_studio_modification_profile_name"
            style="@style/SubHeadBoldWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@{user.username}"
            app:layout_constraintStart_toEndOf="@id/imageview_my_studio_modification_profile"
            app:layout_constraintTop_toTopOf="@id/imageview_my_studio_modification_profile"
            tools:text="kvvangddang" />

        <TextView
            android:id="@+id/textview_my_studio_modification_profile_description"
            style="@style/BodyWhite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:text="@{user.description}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/textview_my_studio_modification_profile_name"
            app:layout_constraintTop_toBottomOf="@id/textview_my_studio_modification_profile_name"
            tools:text="안녕하세요. 저는 최광현입니다." />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@color/primaryDarkColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/imageview_my_studio_modification_profile"
            app:layout_constraintTop_toBottomOf="@+id/imageview_my_studio_modification_profile" />

        <TextView
            android:id="@+id/textview_my_studio_modification_follower"
            style="@style/SubHeadBoldWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/my_studio_follower"
            app:layout_constraintBottom_toBottomOf="@id/imageview_my_studio_modification_background"
            app:layout_constraintStart_toStartOf="@+id/imageview_my_studio_modification_profile"
            app:layout_constraintTop_toBottomOf="@+id/imageview_my_studio_modification_profile" />

        <TextView
            android:id="@+id/textview_my_studio_modification_follower_num"
            style="@style/BodyWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="81.9만"
            app:layout_constraintStart_toEndOf="@+id/textview_my_studio_modification_follower"
            app:layout_constraintTop_toTopOf="@+id/textview_my_studio_modification_follower" />

        <TextView
            android:id="@+id/textview_my_studio_modification_following"
            style="@style/SubHeadBoldWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="96dp"
            android:text="팔로잉"
            app:layout_constraintStart_toEndOf="@+id/textview_my_studio_modification_follower"
            app:layout_constraintTop_toTopOf="@+id/textview_my_studio_modification_follower" />


        <TextView
            android:id="@+id/textview_my_studio_modification_following_num"
            style="@style/BodyWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="100"
            app:layout_constraintStart_toEndOf="@+id/textview_my_studio_modification_following"
            app:layout_constraintTop_toTopOf="@+id/textview_my_studio_modification_follower" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/divider"
            app:layout_constraintBottom_toTopOf="@id/textview_my_studio_modification_change_profile_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textview_my_studio_modification_change_profile_image"
            style="@style/ListCenterAlign"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:text="@string/my_studio_modification_change_profile_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageview_my_studio_modification_background" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_my_studio_modification_change_profile_image" />

        <TextView
            android:id="@+id/textview_my_studio_modification_change_background_image"
            style="@style/ListCenterAlign"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:text="@string/my_studio_modification_change_background_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_my_studio_modification_change_profile_image" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_my_studio_modification_change_background_image" />


        <TextView
            android:id="@+id/textview_my_studio_modification_change_profile_description"
            style="@style/ListCenterAlign"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/my_studio_modification_change_profile_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_my_studio_modification_change_background_image" />

        <EditText
            android:id="@+id/edittext_my_studio_modification_change_profile_description"
            style="@style/ListCenterAlign"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_my_studio_modification_change_profile_description" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>