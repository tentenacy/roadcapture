<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="user"
            type="com.untilled.roadcapture.data.entity.User" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/my_studio_modification_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appbarlayout_my_studio_modification"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:fitsSystemWindows="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:id="@+id/ctoolbarlayout_my_studio_modification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_scrollFlags="scroll|enterAlways">

                    <com.google.android.material.appbar.MaterialToolbar
                        android:id="@+id/toolbar_my_studio_modification"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        app:layout_collapseMode="parallax" />

                    <ImageView
                        android:id="@+id/imageview_my_studio_modification_back"
                        style="@style/BackArrow" />

                    <TextView
                        android:id="@+id/textview_my_studio_modification_title"
                        style="@style/ActionBarTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_marginStart="64dp"
                        android:text="@string/my_studio_modification_title" />

                    <ImageView
                        android:id="@+id/imageview_my_studio_modification_check"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="right"
                        android:padding="12dp"
                        android:src="@drawable/check"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </com.google.android.material.appbar.CollapsingToolbarLayout>
            </com.google.android.material.appbar.AppBarLayout>

            <ImageView
                android:id="@+id/imageview_my_studio_modification_background"
                style="@style/RippleEffect"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="48dp"
                android:scaleType="centerCrop"
                app:layout_constraintDimensionRatio="4:3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                bind:studioBackgroundImage="@{user.backgroundUrl}"
                tools:src="@drawable/sample_profile_background" />

            <ImageView
                android:id="@+id/imageview_edit_background"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="8dp"
                android:background="@drawable/edit_button"
                android:elevation="1dp"
                android:padding="8dp"
                android:src="@drawable/ic_edit"
                app:layout_constraintBottom_toBottomOf="@id/imageview_my_studio_modification_background"
                app:layout_constraintEnd_toEndOf="@id/imageview_my_studio_modification_background"
                app:tint="@color/white" />


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageview_my_studio_modification_profile"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:clickable="true"
                app:civ_border_color="@color/white"
                app:civ_border_width="2dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageview_my_studio_modification_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageview_my_studio_modification_background"
                bind:studioProfileImage="@{user.profileUrl}"
                tools:src="@drawable/sample_profile" />

            <ImageView
                android:id="@+id/imageview_edit_profile"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/edit_button"
                android:elevation="1dp"
                android:padding="8dp"
                android:src="@drawable/ic_edit"
                app:layout_constraintBottom_toBottomOf="@id/imageview_my_studio_modification_profile"
                app:layout_constraintEnd_toEndOf="@id/imageview_my_studio_modification_profile"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/textview_my_studio_modification_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/HeadBold"
                android:layout_marginTop="32dp"
                android:text="@{user.username}"
                tools:text="kvvangddang"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageview_my_studio_modification_profile"/>

            <TextView
                android:id="@+id/textview_my_studio_modification_description_title"
                style="@style/SubHeadBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:text="@string/my_studio_modification_description_title"
                android:textColor="@color/gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textview_my_studio_modification_username" />

            <EditText
                android:id="@+id/edittext_my_studio_modification_profile_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:backgroundTint="@color/lightGray"
                android:text="@{user.description}"
                android:textAppearance="@style/SubHead"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textview_my_studio_modification_description_title"
                app:layout_constraintTop_toBottomOf="@id/textview_my_studio_modification_description_title"
                tools:text="안녕하세요. 저는 최광현입니다." />

            <TextView
                android:id="@+id/textview_my_studio_modification_place_title"
                style="@style/SubHeadBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:text="@string/my_studio_modification_place_title"
                android:textColor="@color/gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edittext_my_studio_modification_profile_description" />

            <com.airbnb.epoxy.EpoxyRecyclerView
                android:id="@+id/recyclerview_my_studio_modification_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="32dp"
                android:nestedScrollingEnabled="false"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textview_my_studio_modification_place_title"
                tools:listitem="@layout/item_studio_place" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>