<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="user"
            type="com.untilled.roadcapture.data.entity.User" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/my_studio_modification_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbarlayout_my_studio_modification"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:fitsSystemWindows="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/ctoolbarlayout_my_studio_modification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|enterAlways">

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/toolbar_my_studio_modification"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    app:layout_collapseMode="parallax" />

                <ImageView
                    android:id="@+id/imageview_my_studio_modification_back"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="start|center"
                    android:padding="16dp"
                    android:src="@drawable/ic_back" />

                <TextView
                    android:id="@+id/textview_my_studio_modification_title"
                    style="@style/ActionBarTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginStart="64dp"
                    android:gravity="start|center"
                    android:text="@string/my_studio_modification_title" />

                <ImageView
                    android:id="@+id/imageview_my_studio_modification_check"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="right"
                    android:padding="12dp"
                    android:src="@drawable/check"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <ImageView
            android:id="@+id/imageview_my_studio_modification_background"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="48dp"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="4:3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            bind:studioBackgroundImage="@{user.backgroundUrl}"
            tools:src="@drawable/sample_profile_background" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_modification"
            app:layout_constraintStart_toEndOf="@id/textview_my_studio_modification_username"
            app:layout_constraintTop_toTopOf="@id/textview_my_studio_modification_username"
            app:layout_constraintBottom_toTopOf="@id/textview_my_studio_modification_username"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageview_my_studio_modification_profile_background"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/imageview_my_studio_modification_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageview_my_studio_modification_background" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageview_my_studio_modification_profile"
            android:layout_width="96dp"
            android:layout_height="96dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageview_my_studio_modification_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageview_my_studio_modification_background"
            bind:studioProfileImage="@{user.profileUrl}"
            tools:src="@drawable/sample_profile" />


        <TextView
            android:id="@+id/textview_my_studio_modification_username"
            style="@style/HeadBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@{user.username}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageview_my_studio_modification_profile"
            tools:text="kvvangddang" />

        <TextView
            android:id="@+id/textview_my_studio_modification_profile_description"
            style="@style/Body"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="48dp"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="@{user.description}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_my_studio_modification_username"
            tools:text="안녕하세요. 저는 최광현입니다." />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>