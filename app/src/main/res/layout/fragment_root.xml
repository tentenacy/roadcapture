<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".features.root.RootFragment">

    <FrameLayout
        android:id="@+id/frame_layout_root_container_bottom_nav_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EFEFEF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_view_root_albums_tab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:text="홈"
            android:textSize="12sp"
            tools:textColor="@color/tab_selected" />

        <TextView
            android:id="@+id/text_view_root_search_tab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:text="검색"
            android:textSize="12sp"
            tools:textColor="@color/tab_unselected" />

        <TextView
            android:id="@+id/text_view_root_capture_tab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:text="추가"
            android:textSize="12sp"
            tools:textColor="@color/tab_unselected" />

        <TextView
            android:id="@+id/text_view_root_following_albums_tab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:text="팔로우"
            android:textSize="12sp"
            tools:textColor="@color/tab_unselected" />

        <TextView
            android:id="@+id/text_view_root_my_studio_tab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:text="마이스튜디오"
            android:textSize="12sp"
            tools:textColor="@color/tab_unselected" />

    </LinearLayout>

</LinearLayout>