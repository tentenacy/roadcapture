<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/constraint_network_error_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img_network_error"
        android:layout_width="168dp"
        android:layout_height="168dp"
        android:src="@drawable/network_error"
        app:tint="@color/gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.25"/>

    <TextView
        android:id="@+id/text_network_error_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/HeadError"
        android:paddingVertical="4dp"
        app:layout_constraintTop_toBottomOf="@id/img_network_error"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="네트워크 오류가 발생하였습니다."/>

    <TextView
        android:id="@+id/text_network_error_subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/SubHeadError"
        app:layout_constraintTop_toBottomOf="@id/text_network_error_head"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="다시 시도 하시겠습니까?"/>

    <Button
        android:id="@+id/btn_network_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Button"
        android:text="재시도"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/text_network_error_subhead"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>