<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_alert_dialog">

    <TextView
        android:id="@+id/textview_logout_confirmation_title"
        style="@style/HeadBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="48dp"
        android:layout_marginTop="32dp"
        android:text="@string/logout_confirmation_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_logout_confirmation_divider_first"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="32dp"
        android:background="@color/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_logout_confirmation_title" />

    <TextView
        android:id="@+id/textview_logout_confirmation_logout"
        style="@style/DialogButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="@string/logout_confirmation_logout"
        android:textColor="@color/secondaryColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_logout_confirmation_divider_first" />

    <View
        android:id="@+id/view_logout_confirmation_divider_second"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_logout_confirmation_logout" />

    <TextView
        android:id="@+id/textview_logout_confirmation_cancel"
        style="@style/DialogButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="@string/logout_confirmation_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_logout_confirmation_divider_second" />

</androidx.constraintlayout.widget.ConstraintLayout>