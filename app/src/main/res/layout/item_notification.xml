<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="notification"
            type="com.untilled.roadcapture.data.entity.Album" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_notification_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingHorizontal="16dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageview_item_notification_profile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/sample_thumbnail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textview_item_notification_username"
            bind:notificationProfileImage="@{notification.profileUrl}" />

        <TextView
            android:id="@+id/textview_item_notification_username"
            style="@style/SubHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="@{notification.username}"
            app:layout_constraintStart_toEndOf="@id/imageview_item_notification_profile"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="hsw0715" />

        <TextView
            android:id="@+id/textview_item_notification_time"
            style="@style/Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@{notification.createdDate}"
            app:layout_constraintBottom_toBottomOf="@id/textview_item_notification_username"
            app:layout_constraintStart_toEndOf="@id/textview_item_notification_username"
            tools:text="3분전" />

        <TextView
            android:id="@+id/textview_item_notification_content"
            style="@style/Body"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:text="@{notification.description}"
            app:layout_constraintEnd_toStartOf="@id/imageview_item_notification_thumbnail"
            app:layout_constraintStart_toStartOf="@id/textview_item_notification_username"
            app:layout_constraintTop_toBottomOf="@id/textview_item_notification_username"
            tools:text="개발 진행중" />

        <ImageView
            android:id="@+id/imageview_item_notification_thumbnail"
            android:layout_width="58dp"
            android:layout_height="58dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/textview_item_notification_username"
            bind:notificationThumbnailImage="@{notification.thumbnailUrl}"
            tools:src="@drawable/sample_thumbnail" />

        <View
            android:id="@+id/divider_item_notification"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="@color/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_item_notification_content" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>