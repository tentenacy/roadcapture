<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".features.signup.EmailInputSignupFragment">

        <ImageView
            android:id="@+id/imageview_email_input_signup_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:padding="16dp"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textview_email_input_signup_title"
            style="@style/Head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/email_input_signup_title"
            app:layout_constraintStart_toStartOf="@+id/guideline_username_input_signup_body_start"
            app:layout_constraintTop_toTopOf="@+id/guideline_username_input_signup_body_top" />

        <TextView
            android:id="@+id/textview_email_input_signup_label"
            style="@style/SubHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="@string/email_input_signup_label"
            app:layout_constraintStart_toStartOf="@+id/guideline_username_input_signup_body_start"
            app:layout_constraintTop_toBottomOf="@+id/textview_email_input_signup_title" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textinputlayout_email_input_signup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:boxBackgroundColor="@android:color/transparent"
            app:layout_constraintEnd_toStartOf="@+id/guideline_email_input_signup_body_end"
            app:layout_constraintStart_toStartOf="@+id/textview_email_input_signup_label"
            app:layout_constraintTop_toBottomOf="@+id/textview_email_input_signup_label">

            <EditText
                android:id="@+id/edittext_email_input_signup"
                style="body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/EditTextTheme" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textview_email_input_signup_next"
            style="@style/Button"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:paddingVertical="8dp"
            android:text="@string/email_input_signup_next"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline_email_input_signup_body_end"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline_username_input_signup_body_start"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.6"
            bind:clickableTextView="@{null}"
            tools:background="@color/secondaryColor" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_username_input_signup_body_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="56dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_email_input_signup_body_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="56dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_username_input_signup_body_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="56dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>