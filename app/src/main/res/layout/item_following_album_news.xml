<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="user"
            type="com.untilled.roadcapture.data.entity.User" />

        <variable
            name="onClickItem"
            type="android.view.View.OnClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_following_album_container"
        android:layout_width="92dp"
        android:layout_height="92dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageview_item_follower_profile_border"
            android:layout_width="62dp"
            android:layout_height="62dp"
            bind:FollowingAlbumUpdate="@{user.update}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:src="@color/white"
            app:layout_constraintStart_toStartOf="@+id/imageview_item_follower_profile_border"
            app:layout_constraintEnd_toEndOf="@+id/imageview_item_follower_profile_border"
            app:layout_constraintTop_toTopOf="@+id/imageview_item_follower_profile_border"
            app:layout_constraintBottom_toBottomOf="@+id/imageview_item_follower_profile_border"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageview_item_following_album_profile"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:onClick="@{onClickItem}"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="@+id/imageview_item_follower_profile_border"
            app:layout_constraintEnd_toEndOf="@+id/imageview_item_follower_profile_border"
            app:layout_constraintTop_toTopOf="@+id/imageview_item_follower_profile_border"
            app:layout_constraintBottom_toBottomOf="@+id/imageview_item_follower_profile_border"
            bind:FollowingAlbumProfileImage="@{user.profileUrl}"
            tools:src="@drawable/sample_thumbnail" />

        <TextView
            android:id="@+id/textview_item_following_album_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            style="@style/UsernameSmall"
            app:layout_constraintTop_toBottomOf="@id/imageview_item_following_album_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="4dp"
            android:text="@{user.username}"
            tools:text="kwangddang11"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>