<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/setting_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbarlayout_setting"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:fitsSystemWindows="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/ctoolbarlayout_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|enterAlways">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar_setting"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:contentInsetStart="0dp"
                app:layout_collapseMode="parallax" />

            <ImageView
                android:id="@+id/imageview_setting_back"
                style="@style/BackArrow" />

            <TextView
                android:id="@+id/textview_setting_title"
                style="@style/ActionBarTitle"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginStart="64dp"
                android:text="@string/setting_title" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_setting_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        android:paddingHorizontal="32dp"
        android:paddingVertical="24dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="56dp">

        <TextView
            android:id="@+id/textview_setting_account"
            style="@style/HeadBold"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:gravity="center|start"
            android:text="@string/setting_account"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_arrow_right"
            app:layout_constraintBottom_toBottomOf="@id/textview_setting_account"
            app:layout_constraintEnd_toEndOf="@id/textview_setting_account"
            app:layout_constraintTop_toTopOf="@id/textview_setting_account"
            app:tint="@color/gray" />

        <View
            android:id="@+id/textview_setting_account_divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_setting_account" />

        <TextView
            android:id="@+id/textview_setting_service"
            style="@style/HeadBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="@string/setting_service"
            app:layout_constraintStart_toStartOf="@id/textview_setting_account"
            app:layout_constraintTop_toBottomOf="@id/textview_setting_account" />

        <TextView
            android:id="@+id/textview_setting_service_location"
            style="@style/ListLeftAlign"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_marginStart="10dp"
            android:text="@string/setting_service_location"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/textview_setting_service"
            app:layout_constraintTop_toBottomOf="@id/textview_setting_service" />

        <TextView
            android:id="@+id/textview_setting_service_location_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Body"
            android:textColor="@color/secondaryColor"
            app:layout_constraintBottom_toBottomOf="@+id/textview_setting_service_location"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/textview_setting_service_location"
            tools:text="앱 사용중에만 허용" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_setting_service_location" />

        <TextView
            android:id="@+id/textview_setting_service_notification"
            style="@style/ListLeftAlign"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:text="@string/setting_service_notification"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/textview_setting_service_location"
            app:layout_constraintTop_toBottomOf="@id/textview_setting_service_location" />

        <Switch
            android:id="@+id/switch_setting_service_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            app:layout_constraintBottom_toBottomOf="@id/textview_setting_service_notification"
            app:layout_constraintEnd_toEndOf="@id/textview_setting_service_notification"
            app:layout_constraintTop_toTopOf="@id/textview_setting_service_notification" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_setting_service_notification" />

        <TextView
            android:id="@+id/textview_setting_support"
            style="@style/HeadBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="@string/setting_support"
            app:layout_constraintStart_toStartOf="@id/textview_setting_service"
            app:layout_constraintTop_toBottomOf="@id/textview_setting_service_notification" />


        <TextView
            android:id="@+id/textview_setting_support_version"
            style="@style/ListLeftAlign"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:text="@string/setting_support_version"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/textview_setting_service_location"
            app:layout_constraintTop_toBottomOf="@id/textview_setting_support" />

        <TextView
            android:id="@+id/textview_setting_support_version_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="1.0v"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/textview_setting_support_version" />


        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_setting_support_version" />

        <TextView
            android:id="@+id/textview_setting_support_opinion"
            style="@style/ListLeftAlign"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:text="@string/setting_support_opinion"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/textview_setting_service_location"
            app:layout_constraintTop_toBottomOf="@id/textview_setting_support_version" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_arrow_right"
            app:layout_constraintBottom_toBottomOf="@id/textview_setting_support_opinion"
            app:layout_constraintEnd_toEndOf="@id/textview_setting_support_opinion"
            app:layout_constraintTop_toTopOf="@id/textview_setting_support_opinion"
            app:tint="@color/gray" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_setting_support_opinion" />

        <TextView
            android:id="@+id/textview_setting_support_terms"
            style="@style/ListLeftAlign"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:text="@string/setting_support_terms"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/textview_setting_service_location"
            app:layout_constraintTop_toBottomOf="@id/textview_setting_support_opinion" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_arrow_right"
            app:layout_constraintBottom_toBottomOf="@id/textview_setting_support_terms"
            app:layout_constraintEnd_toEndOf="@id/textview_setting_support_terms"
            app:layout_constraintTop_toTopOf="@id/textview_setting_support_terms"
            app:tint="@color/gray" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_setting_support_terms" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>