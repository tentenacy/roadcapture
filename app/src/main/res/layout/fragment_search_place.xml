<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_search_place"
            android:layout_width="0dp"
            android:layout_height="48dp"
            app:contentInsetStart="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageview_search_place_back"
                style="@style/BackArrow" />

            <TextView
                android:id="@+id/textview_picture_editor_title"
                style="@style/ActionBarTitle"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:text="@string/search_place_title" />

        </androidx.appcompat.widget.Toolbar>

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_search_place_search"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar_search_place" />

        <View
            android:id="@+id/view_background_edittext_search_place"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/search_edit_text"
            app:layout_constraintEnd_toEndOf="@+id/toolbar_search_place_search"
            app:layout_constraintStart_toStartOf="@+id/toolbar_search_place_search"
            app:layout_constraintTop_toTopOf="@+id/toolbar_search_place_search" />

        <ImageView
            android:id="@+id/imageview_search_input"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_search"
            app:layout_constraintBottom_toBottomOf="@+id/view_background_edittext_search_place"
            app:layout_constraintStart_toStartOf="@+id/view_background_edittext_search_place"
            app:layout_constraintTop_toTopOf="@+id/view_background_edittext_search_place"
            app:tint="#999999" />

        <EditText
            android:id="@+id/edittext_search_place_input"
            style="@style/Body"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:hint="@string/search_place_input_hint"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:maxLines="1"
            app:layout_constraintBottom_toBottomOf="@+id/view_background_edittext_search_place"
            app:layout_constraintEnd_toEndOf="@+id/view_background_edittext_search_place"
            app:layout_constraintStart_toEndOf="@+id/imageview_search_input"
            app:layout_constraintTop_toTopOf="@+id/view_background_edittext_search_place" />

        <View
            android:id="@+id/view_search_place_divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_search_place_search" />

        <com.airbnb.epoxy.EpoxyRecyclerView
            android:id="@+id/recyclerview_search_place"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_search_place_divider"
            tools:listitem="@layout/item_search_place_result" />

        <TextView
            android:id="@+id/textview_search_place_no_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/search_place_no_result"
            android:textAppearance="@style/Body"
            android:textColor="@color/gray"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar_search_place_search" />

        <ProgressBar
            android:id="@+id/progressbar_search_place_loading"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:indeterminateDuration="1000"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
