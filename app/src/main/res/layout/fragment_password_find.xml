<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageview_password_find_back"
        style="@style/BackArrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_password_find_title"
        style="@style/HeadBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="@string/password_find_title"
        app:layout_constraintStart_toStartOf="@+id/guideline_password_find_body_start"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_password_find_label"
        style="@style/Body"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/password_find_label"
        app:layout_constraintEnd_toEndOf="@id/textview_password_find_title"
        app:layout_constraintStart_toStartOf="@+id/guideline_password_find_body_start"
        app:layout_constraintTop_toBottomOf="@+id/textview_password_find_title" />


    <EditText
        android:id="@+id/edittext_password_find_email_input"
        style="@style/SubHead"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="@string/password_find_email_input"
        android:inputType="textPassword"
        app:layout_constraintEnd_toStartOf="@+id/guideline_password_find_body_end"
        app:layout_constraintStart_toStartOf="@+id/guideline_password_find_body_start"
        app:layout_constraintTop_toBottomOf="@+id/textview_password_find_label" />

    <Button
        android:id="@+id/button_password_find"
        style="@style/Button"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:text="@string/password_find_button"
        app:layout_constraintEnd_toStartOf="@+id/guideline_password_find_body_end"
        app:layout_constraintStart_toStartOf="@+id/guideline_password_find_body_start"
        app:layout_constraintTop_toBottomOf="@id/edittext_password_find_email_input" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_password_find_body_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="56dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_password_find_body_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="56dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
