<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/setting_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbarlayout_setting"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:fitsSystemWindows="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/ctoolbarlayout_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|enterAlways">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar_setting"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:contentInsetStart="0dp"
                app:layout_collapseMode="parallax" />

            <ImageView
                android:id="@+id/imageview_setting_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="16dp"
                android:layout_gravity="start|center"
                android:src="@drawable/ic_back" />

            <TextView
                android:id="@+id/textview_setting_title"
                style="@style/ActionBarTitle"
                android:layout_width="wrap_content"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginStart="64dp"
                android:gravity="start|center"
                android:text="@string/setting_title" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/scrollview_setting_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        android:padding="32dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="56dp">

        <TextView
            android:id="@+id/textview_setting_account"
            android:textAppearance="@style/Head"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_marginTop="12dp"
            android:text="@string/setting_account"
            android:gravity="center|start"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/textview_setting_account_divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_setting_account" />

        <TextView
            android:id="@+id/textview_setting_service"
            android:textAppearance="@style/Head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="@string/setting_service"
            app:layout_constraintStart_toStartOf="@id/textview_setting_account"
            app:layout_constraintTop_toBottomOf="@id/textview_setting_account" />

        <TextView
            android:id="@+id/textview_setting_service_location"
            android:textAppearance="@style/SubHead"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_marginStart="12dp"
            android:gravity="center|left"
            android:text="@string/setting_service_location"
            app:layout_constraintStart_toStartOf="@id/textview_setting_service"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_setting_service" />

        <TextView
            android:id="@+id/textview_setting_service_location_detail"
            android:textAppearance="@style/Body"
            android:textColor="@color/secondaryColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="앱 사용중에만 허용"
            app:layout_constraintTop_toTopOf="@id/textview_setting_service_location"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_setting_service_location" />

        <TextView
            android:id="@+id/textview_setting_service_notification"
            android:textAppearance="@style/SubHead"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:gravity="center|left"
            android:text="@string/setting_service_notification"
            app:layout_constraintStart_toStartOf="@id/textview_setting_service_location"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_setting_service_location" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_setting_service_notification" />

        <TextView
            android:id="@+id/textview_setting_support"
            android:textAppearance="@style/Head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="@string/setting_support"
            app:layout_constraintStart_toStartOf="@id/textview_setting_service"
            app:layout_constraintTop_toBottomOf="@id/textview_setting_service_notification" />


        <TextView
            android:id="@+id/textview_setting_support_version"
            android:textAppearance="@style/SubHead"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:gravity="center|left"
            android:text="@string/setting_support_version"
            app:layout_constraintStart_toStartOf="@id/textview_setting_service_location"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_setting_support" />

        <TextView
            android:id="@+id/textview_setting_support_version_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.0v"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/textview_setting_support_version"/>


        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_setting_support_version" />

        <TextView
            android:id="@+id/textview_setting_support_opinion"
            android:textAppearance="@style/SubHead"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:text="@string/setting_support_opinion"
            android:gravity="center|left"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/textview_setting_service_location"
            app:layout_constraintTop_toBottomOf="@id/textview_setting_support_version" />


        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_setting_support_opinion" />

        <TextView
            android:id="@+id/textview_setting_support_terms"
            android:textAppearance="@style/SubHead"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:text="@string/setting_support_terms"
            android:gravity="center|left"
            app:layout_constraintStart_toStartOf="@id/textview_setting_service_location"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_setting_support_opinion" />


        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_setting_support_terms" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>