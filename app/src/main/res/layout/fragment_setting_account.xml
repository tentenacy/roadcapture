<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/setting_account_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbarlayout_setting_account"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:fitsSystemWindows="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/ctoolbarlayout_setting_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|enterAlways">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar_setting_account"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:contentInsetStart="0dp"
                app:layout_collapseMode="parallax" />

            <ImageView
                android:id="@+id/imageview_setting_account_back"
                style="@style/BackArrow" />

            <TextView
                android:id="@+id/textview_setting_account_title"
                style="@style/ActionBarTitle"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginStart="64dp"
                android:text="@string/setting_account_title" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_scrollview_setting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        android:paddingHorizontal="32dp"
        android:paddingVertical="24dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textview_setting_account_connected"
            style="@style/HeadBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/setting_account_connectedAccount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textview_setting_account_connected_email"
            style="@style/SubHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="24dp"
            android:text="kwangddang11@naver.com"
            app:layout_constraintStart_toStartOf="@id/textview_setting_account_connected"
            app:layout_constraintTop_toBottomOf="@id/textview_setting_account_connected" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_naver"
            app:layout_constraintBottom_toBottomOf="@id/textview_setting_account_connected_email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/textview_setting_account_connected_email" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:background="@color/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/textview_setting_account_connected_email"
            app:layout_constraintTop_toBottomOf="@id/textview_setting_account_connected_email" />

        <TextView
            android:id="@+id/textview_setting_account_username"
            style="@style/SubHead"
            android:layout_width="0dp"
            android:layout_marginTop="24dp"
            android:layout_height="64dp"
            android:gravity="center|start"
            android:text="@string/setting_account_username"
            app:layout_constraintStart_toStartOf="@id/textview_setting_account_connected_email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_setting_account_connected_email" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            app:layout_constraintTop_toTopOf="@id/textview_setting_account_username"
            app:layout_constraintBottom_toBottomOf="@id/textview_setting_account_username"
            app:layout_constraintEnd_toEndOf="@id/textview_setting_account_username"
            android:src="@drawable/ic_arrow_right"
            app:tint="@color/gray" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/textview_setting_account_username"
            app:layout_constraintTop_toBottomOf="@id/textview_setting_account_username" />

        <TextView
            android:id="@+id/textview_setting_account_password"
            style="@style/SubHead"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:text="@string/setting_account_password"
            android:gravity="center|start"
            app:layout_constraintStart_toStartOf="@id/textview_setting_account_username"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_setting_account_username" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            app:layout_constraintTop_toTopOf="@id/textview_setting_account_password"
            app:layout_constraintBottom_toBottomOf="@id/textview_setting_account_password"
            app:layout_constraintEnd_toEndOf="@id/textview_setting_account_password"
            android:src="@drawable/ic_arrow_right"
            app:tint="@color/gray" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/textview_setting_account_password"
            app:layout_constraintTop_toBottomOf="@id/textview_setting_account_password" />

        <TextView
            android:id="@+id/textview_setting_account_logout"
            style="@style/SubHead"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:gravity="center|start"
            android:text="@string/setting_account_logout"
            app:layout_constraintBottom_toTopOf="@+id/textview_setting_account_service_withdrawal"
            app:layout_constraintStart_toStartOf="@id/textview_setting_account_password"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/textview_setting_account_logout"
            app:layout_constraintTop_toBottomOf="@id/textview_setting_account_logout" />

        <TextView
            android:id="@+id/textview_setting_account_service_withdrawal"
            style="@style/SubHead"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_marginBottom="24dp"
            android:gravity="center|start"
            android:text="@string/setting_account_resign"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/textview_setting_account_password"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/textview_setting_account_password"
            app:layout_constraintTop_toBottomOf="@id/textview_setting_account_service_withdrawal" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>