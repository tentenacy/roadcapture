<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="albumCount"
            type="com.untilled.roadcapture.data.entity.paging.UserAlbums" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_ilabel_albums_studio_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="32dp"
        android:paddingBottom="24dp">

        <TextView
            android:id="@+id/text_ilabel_albums_studio_label"
            style="@style/SubHeadBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ilabel_albums_studio"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/text_ilabel_albums_studio_count"
            style="@style/SubHeadBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/text_ilabel_albums_studio_label"
            app:layout_constraintTop_toTopOf="@id/text_ilabel_albums_studio_label"
            android:text="0"/>
<!--            android:text="@{Integer.toString(albumCount.total)}"-->

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>