<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/picture_viewer_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageview_picture_viewer_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <View
        android:id="@+id/imageview_picture_viewer_background_gradient"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/overlay_gradient_picture_viewer" />

    <com.airbnb.epoxy.EpoxyRecyclerView
        android:id="@+id/recyclerview_picture_viewer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:listitem="@layout/item_picture_viewer_thumbnail" />

    <ImageView
        android:id="@+id/imageview_item_picture_viewer_content_like"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:padding="14dp"
        android:src="@drawable/ic_like2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imageview_item_picture_viewer_content_comment"
        app:tint="@color/primaryColor" />

    <ImageView
        android:id="@+id/imageview_item_picture_viewer_content_comment"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginEnd="8dp"
        android:padding="16dp"
        android:src="@drawable/ic_comment2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/primaryColor" />

</androidx.constraintlayout.widget.ConstraintLayout>