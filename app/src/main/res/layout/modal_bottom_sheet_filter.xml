<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/filter_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bottom_sheet_dialog">

        <ImageView
            android:id="@+id/imageview_filter_close"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_close"
            app:layout_constraintBottom_toBottomOf="@id/textview_filter_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/textview_filter_title"
            app:tint="@color/black"
            bind:rippleEffect="@{null}" />

        <TextView
            android:id="@+id/textview_filter_title"
            style="@style/SubHeadBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/filter_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textview_filter_reset"
            style="@style/Body"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/filter_reset"
            app:layout_constraintBottom_toBottomOf="@id/view_filter_divider_first"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            bind:rippleEffect="@{null}" />

        <View
            android:id="@+id/view_filter_divider_first"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="16dp"
            android:background="@color/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_filter_title" />

        <TextView
            android:id="@+id/textview_filter_duration"
            style="@style/SubHeadBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/filter_duration"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_filter_divider_first" />

        <TextView
            android:id="@+id/textview_filter_set_duration"
            style="@style/Body"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:text="@string/filter_set_duration"
            app:layout_constraintBottom_toBottomOf="@id/textview_filter_duration"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/textview_filter_duration"
            bind:rippleEffect="@{null}" />

        <RadioGroup
            android:id="@+id/radiogroup_filter_duration"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:gravity="center|start"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_filter_set_duration">

            <RadioButton
                android:id="@+id/radiobutton_filter_whole_duration"
                style="@style/Body"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/selector_radio_button"
                android:button="@null"
                android:checked="true"
                android:elevation="1dp"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/filter_whole_duration"
                android:textColor="@drawable/selector_radio_text" />

            <RadioButton
                android:id="@+id/radiobutton_filter_today"
                style="@style/Body"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/selector_radio_button"
                android:button="@null"
                android:elevation="1dp"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/filter_today"
                android:textColor="@drawable/selector_radio_text" />

            <RadioButton
                android:id="@+id/radiobutton_filter_this_week"
                style="@style/Body"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/selector_radio_button"
                android:button="@null"
                android:elevation="2dp"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/filter_this_week"
                android:textColor="@drawable/selector_radio_text" />

            <RadioButton
                android:id="@+id/radiobutton_filter_this_month"
                style="@style/Body"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/selector_radio_button"
                android:button="@null"
                android:elevation="2dp"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/filter_this_month"
                android:textColor="@drawable/selector_radio_text" />

            <RadioButton
                android:id="@+id/radiobutton_filter_this_year"
                style="@style/Body"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/selector_radio_button"
                android:button="@null"
                android:elevation="2dp"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/filter_this_year"
                android:textColor="@drawable/selector_radio_text" />

        </RadioGroup>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_filter_set_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/radiogroup_filter_duration"
            tools:visibility="visible">

            <TextView
                android:id="@+id/textview_filter_start_date"
                style="@style/Body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:layout_marginTop="16dp"
                android:text="@string/filter_start_date"
                app:layout_constraintStart_toStartOf="@id/button_filter_start_date"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/button_filter_start_date"
                style="@style/ButtonWhite"
                android:layout_width="176dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/bottom_sheet_button"
                android:elevation="1dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textview_filter_start_date"
                bind:rippleEffect="@{null}"
                tools:text="2021년 9월 7일" />

            <TextView
                android:id="@+id/textview_filter_end_date"
                style="@style/Body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:text="@string/filter_end_date"
                app:layout_constraintStart_toStartOf="@id/button_filter_end_date"
                app:layout_constraintTop_toTopOf="@id/textview_filter_start_date" />

            <Button
                android:id="@+id/button_filter_end_date"
                style="@style/ButtonWhite"
                android:layout_width="176dp"
                android:layout_height="40dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bottom_sheet_button"
                android:elevation="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/button_filter_start_date"
                tools:text="2021년 9월 7일" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/view_filter_divider_second"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="@color/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_filter_set_duration" />

        <TextView
            android:id="@+id/textview_filter_sorting"
            style="@style/SubHeadBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/filter_sorting"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_filter_divider_second" />

        <RadioGroup
            android:id="@+id/radiogroup_filter_sorting"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:gravity="center|start"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_filter_sorting">

            <RadioButton
                android:id="@+id/radiobutton_filter_sorting_latest"
                style="@style/Body"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/selector_radio_button"
                android:button="@null"
                android:checked="true"
                android:elevation="1dp"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/filter_sorting_latest"
                android:textColor="@drawable/selector_radio_text" />

            <RadioButton
                android:id="@+id/radiobutton_filter_sorting_popularity"
                style="@style/Body"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/selector_radio_button"
                android:button="@null"
                android:elevation="1dp"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/filter_sorting_popularity"
                android:textColor="@drawable/selector_radio_text" />
        </RadioGroup>

        <Button
            android:id="@+id/button_filter_apply"
            style="@style/Button"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bottom_sheet_button"
            android:text="@string/filter_apply"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/radiogroup_filter_sorting" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>