<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/albums_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".features.root.albums.AlbumsFragment">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/coordinator_albums"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appbarlayout_albums"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:id="@+id/ctoolbarlayout_albums"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_scrollFlags="scroll|enterAlways">

                    <com.google.android.material.appbar.MaterialToolbar
                        android:id="@+id/toolbar_albums"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        app:contentInsetStart="0dp"
                        app:layout_collapseMode="parallax" />

                    <TextView
                        android:id="@+id/textview_albums_title"
                        style="@style/ActionBarTitle"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:gravity="start|center"
                        android:paddingHorizontal="16dp"
                        android:text="@string/app_name" />

                    <ImageView
                        android:id="@+id/imageview_albums_notification"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="end|center"
                        android:layout_marginEnd="72dp"
                        android:padding="4dp"
                        android:src="@drawable/ic_notification" />

                    <ImageView
                        android:id="@+id/imageview_albums_setting"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="end|center"
                        android:layout_marginEnd="16dp"
                        android:padding="4dp"
                        android:src="@drawable/ic_setting" />

                </com.google.android.material.appbar.CollapsingToolbarLayout>

            </com.google.android.material.appbar.AppBarLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_albums_sort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_margin="16dp"
                android:contentDescription="@string/following_albums_sort"
                android:src="@drawable/ic_align" />

            <com.airbnb.epoxy.EpoxyRecyclerView
                android:id="@+id/recyclerview_albums"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:listitem="@layout/item_home_album" />

        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>