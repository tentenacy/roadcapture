<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_alert_dialog">

    <RadioGroup
        android:id="@+id/raddiogroup_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="32dp"
        android:paddingTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/radiobutton_report_sexual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/report_sexual"
            android:textAppearance="@style/SubHead" />

        <RadioButton
            android:id="@+id/radiobutton_report_violent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/report_violent"
            android:textAppearance="@style/SubHead" />

        <RadioButton
            android:id="@+id/radiobutton_report_dangerous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/report_dangerous"
            android:textAppearance="@style/SubHead" />

        <RadioButton
            android:id="@+id/radiobutton_report_spam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/report_spam"
            android:textAppearance="@style/SubHead" />

    </RadioGroup>


    <View
        android:id="@+id/view_report_divider_first"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/raddiogroup_report" />

    <TextView
        android:id="@+id/textview_report_report"
        style="@style/DialogButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="@string/report_report"
        android:textColor="@color/secondaryColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_report_divider_first" />

    <View
        android:id="@+id/view_report_divider_second"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_report_report" />

    <TextView
        android:id="@+id/textview_report_cancel"
        style="@style/DialogButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="@string/report_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_report_divider_second" />

</androidx.constraintlayout.widget.ConstraintLayout>