<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="album"
            type="com.untilled.roadcapture.data.entity.Album" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_home_album_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        bind:adjustConstraintEmptyDesc="@{album.description}">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageview_item_home_albums_thumbnail"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toStartOf="@+id/imageview_item_home_album_profile"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            bind:albumThumbnailImage="@{album.thumbnailUrl}"
            tools:src="@drawable/sample_thumbnail" />

        <View
            android:id="@+id/view_item_home_album_overlay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/overlay_gradient"
            app:layout_constraintBottom_toBottomOf="@+id/imageview_item_home_albums_thumbnail"
            app:layout_constraintEnd_toEndOf="@+id/imageview_item_home_albums_thumbnail"
            app:layout_constraintStart_toStartOf="@+id/imageview_item_home_albums_thumbnail"
            app:layout_constraintTop_toTopOf="@+id/imageview_item_home_albums_thumbnail" />

        <ImageView
            android:id="@+id/imageview_item_home_album_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toTopOf="@+id/imageview_item_home_album_like"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageview_item_home_albums_thumbnail"
            app:layout_constraintVertical_chainStyle="spread_inside"
            bind:albumProfileImage="@{album.profileUrl}"
            tools:src="@drawable/sample_profile" />

        <ImageView
            android:id="@+id/imageview_item_home_album_like"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/like"
            app:layout_constraintBottom_toTopOf="@+id/imageview_item_home_album_comment"
            app:layout_constraintEnd_toEndOf="@+id/imageview_item_home_album_profile"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/imageview_item_home_album_profile"
            app:layout_constraintTop_toBottomOf="@+id/imageview_item_home_album_profile" />

        <TextView
            android:id="@+id/textview_item_home_album_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@{album.likeCount}"
            android:textAppearance="@style/TextAppearance.MdcTypographyStyles.Subtitle2"
            app:layout_constraintEnd_toEndOf="@+id/imageview_item_home_album_like"
            app:layout_constraintStart_toStartOf="@+id/imageview_item_home_album_like"
            app:layout_constraintTop_toBottomOf="@+id/imageview_item_home_album_like"
            tools:text="1천" />

        <ImageView
            android:id="@+id/imageview_item_home_album_comment"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="19dp"
            android:src="@drawable/comment"
            app:layout_constraintBottom_toTopOf="@+id/imageview_item_home_album_more"
            app:layout_constraintEnd_toEndOf="@+id/imageview_item_home_album_like"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/imageview_item_home_album_like"
            app:layout_constraintTop_toBottomOf="@+id/imageview_item_home_album_like" />

        <TextView
            android:id="@+id/textview_item_home_album_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@{album.commentCount}"
            android:textAppearance="@style/TextAppearance.MdcTypographyStyles.Subtitle2"
            app:layout_constraintEnd_toEndOf="@+id/imageview_item_home_album_comment"
            app:layout_constraintStart_toStartOf="@+id/imageview_item_home_album_comment"
            app:layout_constraintTop_toBottomOf="@+id/imageview_item_home_album_comment"
            tools:text="39" />

        <ImageView
            android:id="@+id/imageview_item_home_album_more"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="19dp"
            android:layout_marginBottom="4dp"
            android:src="@drawable/more"
            app:layout_constraintBottom_toBottomOf="@+id/imageview_item_home_albums_thumbnail"
            app:layout_constraintEnd_toEndOf="@+id/imageview_item_home_album_comment"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/imageview_item_home_album_comment"
            app:layout_constraintTop_toBottomOf="@+id/imageview_item_home_album_comment"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textview_item_home_album_overlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:textAppearance="@style/TextAppearance.MdcTypographyStyles.Subtitle1"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            bind:albumOverlayCreatedDate="@{album.createdDate}"
            bind:albumOverlayUsername="@{album.username}"
            tools:text="tenutz · 3분전" />

        <TextView
            android:id="@+id/textview_item_home_album_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@{album.title}"
            android:textAppearance="@style/TextAppearance.MdcTypographyStyles.Subtitle1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageview_item_home_albums_thumbnail"
            tools:text="나의 첫 부산 여행기" />

        <TextView
            android:id="@+id/textview_item_home_album_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@{album.description}"
            android:textAppearance="@style/TextAppearance.MdcTypographyStyles.Subtitle2"
            android:visibility='@{album.description.equals("") ? View.GONE : View.VISIBLE}'
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/textview_item_home_album_title"
            app:layout_constraintStart_toStartOf="@+id/textview_item_home_album_title"
            app:layout_constraintTop_toBottomOf="@+id/textview_item_home_album_title"
            tools:text="안녕하세요. 저는 이원석입니다. 잘 부탁드립니다!" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>