<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_main"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.untilled.roadcapture.features.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_emailInputSignupFragment"
            app:destination="@id/emailInputSignupFragment" />
        <action
            android:id="@+id/action_loginFragment_to_rootFragment"
            app:destination="@id/rootFragment" />
    </fragment>
    <fragment
        android:id="@+id/emailInputSignupFragment"
        android:name="com.untilled.roadcapture.features.signup.EmailInputSignupFragment"
        android:label="fragment_email_input_signup"
        tools:layout="@layout/fragment_email_input_signup">
        <action
            android:id="@+id/action_emailInputSignupFragment_to_passwordInputSignupFragment"
            app:destination="@id/passwordInputSignupFragment" />
    </fragment>
    <fragment
        android:id="@+id/passwordInputSignupFragment"
        android:name="com.untilled.roadcapture.features.signup.PasswordInputSignupFragment"
        android:label="fragment_password_input_signup"
        tools:layout="@layout/fragment_password_input_signup">
        <action
            android:id="@+id/action_passwordInputSignupFragment_to_usernameInputSignupFragment"
            app:destination="@id/usernameInputSignupFragment" />
    </fragment>
    <fragment
        android:id="@+id/usernameInputSignupFragment"
        android:name="com.untilled.roadcapture.features.signup.UsernameInputSignupFragment"
        android:label="fragment_username_input_signup"
        tools:layout="@layout/fragment_username_input_signup">
        <action
            android:id="@+id/action_usernameInputSignupFragment_to_rootFragment"
            app:destination="@id/rootFragment"
            app:popUpTo="@id/emailInputSignupFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/rootFragment"
        android:name="com.untilled.roadcapture.features.root.RootFragment"
        android:label="fragment_root"
        tools:layout="@layout/fragment_root" />
</navigation>