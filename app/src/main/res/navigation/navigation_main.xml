<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_main"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.untilled.roadcapture.features.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_emailInputSignupFragment"
            app:destination="@id/emailInputSignupFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
        <action
            android:id="@+id/action_loginFragment_to_rootFragment"
            app:destination="@id/rootFragment" />
    </fragment>
    <fragment
        android:id="@+id/emailInputSignupFragment"
        android:name="com.untilled.roadcapture.features.signup.EmailInputSignupFragment"
        android:label="fragment_email_input_signup"
        tools:layout="@layout/fragment_email_input_signup">
        <action
            android:id="@+id/action_emailInputSignupFragment_to_passwordInputSignupFragment"
            app:destination="@id/passwordInputSignupFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
    </fragment>
    <fragment
        android:id="@+id/passwordInputSignupFragment"
        android:name="com.untilled.roadcapture.features.signup.PasswordInputSignupFragment"
        android:label="fragment_password_input_signup"
        tools:layout="@layout/fragment_password_input_signup">
        <action
            android:id="@+id/action_passwordInputSignupFragment_to_usernameInputSignupFragment"
            app:destination="@id/usernameInputSignupFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
    </fragment>
    <fragment
        android:id="@+id/usernameInputSignupFragment"
        android:name="com.untilled.roadcapture.features.signup.UsernameInputSignupFragment"
        android:label="fragment_username_input_signup"
        tools:layout="@layout/fragment_username_input_signup">
        <action
            android:id="@+id/action_usernameInputSignupFragment_to_rootFragment"
            app:destination="@id/rootFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right"
            app:popUpTo="@id/emailInputSignupFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/rootFragment"
        android:name="com.untilled.roadcapture.features.root.RootFragment"
        android:label="fragment_root"
        tools:layout="@layout/fragment_root" >
        <action
            android:id="@+id/action_rootFragment_to_captureFragment"
            app:destination="@id/captureFragment" />
        <action
            android:id="@+id/action_rootFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>
    <fragment
        android:id="@+id/captureFragment"
        android:name="com.untilled.roadcapture.features.root.capture.CaptureFragment"
        tools:layout="@layout/fragment_capture"
        android:label="fragment_capture" >
        <action
            android:id="@+id/action_captureFragment_to_cameraFragment"
            app:destination="@id/cameraFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.untilled.roadcapture.features.root.settings.SettingsFragment"
        tools:layout="@layout/fragment_setting"
        android:label="SettingsFragment" >
        <action
            android:id="@+id/action_settingsFragment_to_accountSettingFragment"
            app:destination="@id/accountSettingFragment" />
    </fragment>
    <fragment
        android:id="@+id/accountSettingFragment"
        android:name="com.untilled.roadcapture.features.root.settings.AccountSettingFragment"
        tools:layout="@layout/fragment_setting_account"
        android:label="AccountSettingFragment" />
    <fragment
        android:id="@+id/cameraFragment"
        android:name="com.untilled.roadcapture.features.root.capture.CameraFragment"
        tools:layout="@layout/fragment_camera"
        android:label="CameraFragment" />
</navigation>